                    <a class="float-right btn" data-toggle="modal" data-target="#signIn_signUp" id="sideBarSignIn">@Model.SignIn_SignOut_SignUp</a>
                </div>
            </div>
        </li>
    </ul>
    <div id="sideBarList" class="overflow-auto" style="height:100%;position:relative;"></div>
</div>
