@model UserDetails
<div id="mySidenav" class="sidenav leftSidenav" style="padding:0">
    <ul class="list-group list-group-flush">
        <li class="list-group-item button-custom" style="padding:0;background-image:url(/Content/Images/926845-best-nice-desktop-backgrounds-1920x1200-windows-7.jpg);background-size:cover">
            <div class="card text-center button-view">
                <div class="card-header button-custom">
                    <a href="javascript:void(0)" class="closeNavBar float-right" style="color:white;font-size:150%">&times;</a>
                </div>
                <div class="card-body button-custom" style="color:white;">
                    <h5 class="card-title" id="sideBar_Username">@Model.UserName</h5>
                </div>
